#shader vertex#version 410 corelayout(location = 0) in vec4 position;   /* vertex position */uniform mat4 u_MVP;                      /* object MVP matrix */void main(){    gl_Position = u_MVP * position;};#shader fragment#version 410 coreuniform float u_far;uniform float u_near;layout(location = 0) out float fragDepth;//layout(location = 0) out vec4 color;float linearDepth(float depth){    // for visualization only    float ndc = depth * 2.0 - 1.0;    // return (2.0 * u_near * u_far) / (u_far + u_near - ndc * (u_far - u_near)) / 50.0f;    // for real shadow mapping    return (2.0 * u_near * u_far) / (u_far + u_near - depth * (u_far - u_near));}void main(){    float depth = linearDepth(gl_FragCoord.z);    fragDepth = gl_FragCoord.z;};