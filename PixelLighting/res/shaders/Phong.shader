#shader vertex#version 410 corelayout(location = 0) in vec4 position;layout(location = 1) in vec4 normalColor;layout(location = 2) in vec2 texCoord;out vec4 fragmentColor;out vec2 fragTexCoord;uniform mat4 u_MVP;uniform float u_ambientLight;uniform vec4 u_ambientLightColor;void main(){    gl_Position = u_MVP * position;    fragmentColor = vec4(1.0f) * u_ambientLight * u_ambientLightColor;    fragmentColor.a = 1.0f;    fragTexCoord = texCoord;};#shader fragment#version 410 corein vec4 fragmentColor;in vec2 fragTexCoord;layout(location = 0) out vec4 color;uniform sampler2D Texture;void main(){    color = texture(Texture, fragTexCoord) * fragmentColor;};