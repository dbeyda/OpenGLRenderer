#shader vertex#version 410 corelayout(location = 0) in vec4 position;layout(location = 1) in vec4 normal;layout(location = 2) in vec2 texCoord;out vec4 fragmentColor;out vec2 fragTexCoord;uniform mat4 u_MVP;void main(){    gl_Position = u_MVP * position;    vec4 pos_colors = normalize(position);    fragmentColor = vec4(0.5-pos_colors.r, 0.5-pos_colors.g, 0.5-pos_colors.b, 0.8);    fragTexCoord = texCoord;};#shader fragment#version 410 corein vec4 fragmentColor;in vec2 fragTexCoord;layout(location = 0) out vec4 color;uniform sampler2D Texture;void main(){    color = texture(Texture, fragTexCoord);};