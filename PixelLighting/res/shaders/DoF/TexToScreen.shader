#shader vertex#version 410 corelayout(location = 0) in vec4 position;void main(){    // pass a fullscreen quad to the fragment shader, without any transformations    gl_Position = vec4(position.xy, 0.0f, 1.0f);};#shader fragment#version 410 corelayout(location = 0) out vec4 output;// texture samplersuniform struct Samplers{    sampler2D MainSceneColor;               // Scene depth buffer} samplers;uniform vec2 viewportSize;                  // output buffer dimensionsvoid main(){    vec2 uv = gl_FragCoord.xy / viewportSize;    output = texture(samplers.MainSceneColor, uv);};